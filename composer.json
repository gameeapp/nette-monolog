{
	"name": "gamee/nette-monolog",
	"description": "The integration of monolog with nette/di",
	"type": "library",
	"require": {
		"php": ">= 7.1",
		"monolog/monolog": "^1.23",
		"nette/di": "^3.0"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"mockery/mockery": "^1.0",
		"gamee/php-code-checker-rules": "^1.2"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Gamee Dev team",
			"email": "devs@gameeapp.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Gamee\\Monolog\\": "src/"
		}
	},
	"minimum-stability": "stable",
	"scripts": {
		"app:phpstan": "vendor/phpstan/phpstan/bin/phpstan analyse src -c vendor/gamee/php-code-checker-rules/phpstan.neon --level 7",
		"app:phpcs": "vendor/bin/phpcs --standard=vendor/gamee/php-code-checker-rules/ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -sp src",
		"app:phpcsfix": "vendor/bin/phpcbf --standard=vendor/gamee/php-code-checker-rules/ruleset.xml --extensions=php,phpt --tab-width=4 --ignore=temp -sp src",
		"app:all": [
			"@app:phpstan",
			"@app:phpcs"
		]
	}
}
